<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20sp" android:background="@color/transparent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/transparent"
            android:textColor="@color/fadedWhite"
            android:text="Sale Date"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:background="@drawable/edit_box"
            android:textColor="@color/black"
            android:focusable="false"
            android:hint="Enter Sale Date"
            android:id="@+id/eggSaleDate"
            android:textSize="15sp"
            android:padding="5sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/fadedWhite"
            android:text="Eggs"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10sp"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25sp"
            android:layout_marginLeft="25sp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Crates"
                android:inputType="number"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:textSize="15sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/enter_number_of_crates_selling"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_box">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Eggs"
                    android:inputType="number"
                    android:textColor="@color/grey"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:textColorHint="@color/veryLightGrey"
                    android:id="@+id/enter_number_of_eggs_selling"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/fadedWhite"
            android:text="Amount Due \t\t\t Amount Paid"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10sp"
            android:gravity="center"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp">

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount Due"
                android:inputType="number"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:textSize="15sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/enter_amount_due_eggSale"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount Paid"
                android:inputType="number"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:textSize="15sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/enter_amount_collected_eggSale"/>
        </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/fadedWhite"
            android:text="Buyer Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10sp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount Paid"
                android:inputType="text"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:textSize="15sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/enter_buyer_name_eggSale"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/accent_btn"
            android:textStyle="bold"
            android:id="@+id/ok_sell_eggs"
            android:textColor="@color/fadedWhite"
            android:text="Enter"/>
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_close_white_24dp"
        android:tint="@color/colorPrimaryLight"
        android:elevation="3sp"
        android:layout_marginTop="10sp"
        android:id="@+id/close_egg_sale"
        android:background="@drawable/close_popup"/>
</RelativeLayout>