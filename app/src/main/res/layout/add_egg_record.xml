<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20sp" android:background="@color/transparent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/fadedWhite"
            android:text="Select Date"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:background="@drawable/info_bg"
            android:textColor="@color/black"
            android:focusable="false"
            android:id="@+id/dateToaddEgg"
            android:textSize="15dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textColor="@color/fadedWhite"
            android:text="Select Bird"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:spinnerMode="dialog"
            android:id="@+id/select_bird_to_add_agg"></Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fadedWhite"
                    android:text="Enter Crates"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_box">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Crates"
                        android:inputType="number"
                        android:background="@android:drawable/editbox_background_normal"
                        android:textColor="@color/grey"
                        android:padding="5sp"
                        android:textSize="14sp"
                        android:textColorHint="@color/veryLightGrey"
                        android:id="@+id/add_number_of_crates"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:padding="5sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fadedWhite"
                    android:text="Enter Eggs"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_box">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Eggs"
                        android:inputType="number"
                        android:background="@android:drawable/editbox_background_normal"
                        android:textColor="@color/grey"
                        android:padding="5sp"
                        android:textSize="14sp"
                        android:textColorHint="@color/veryLightGrey"
                        android:id="@+id/add_number_of_eggs"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/fadedWhite"
            android:text="Enter Cracked"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Cracked"
                android:inputType="number"
                android:background="@color/extlightOrange"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:textSize="14sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/add_number_of_cracked"/>
        </RelativeLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:textSize="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/accent_btn"
                    android:textStyle="bold"
                    android:id="@+id/add_egg_entry_btn"
                    android:textColor="@color/fadedWhite"
                    android:text="Enter"/>
            </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_close_white_24dp"
        android:tint="@color/colorPrimaryLight"
        android:elevation="3sp"
        android:layout_marginTop="10sp"
        android:id="@+id/close_addEgg_view"
        android:background="@drawable/close_popup"/>
</RelativeLayout>