<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20sp" android:background="@color/transparent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/fadedWhite"
            android:text="Old PIN"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10sp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Old PIN"
                android:inputType="numberPassword"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:maxLength="6"
                android:textSize="15sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/enter_old_pin"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/fadedWhite"
            android:text="New PIN"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10sp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter New PIN"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:textSize="15sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/enter_new_pin"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/fadedWhite"
            android:text="Confirm PIN"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10sp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re-enter New PIN"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:textSize="15sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/reenter_new_pin"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/accent_btn"
            android:textStyle="bold"
            android:id="@+id/ok_change_pin"
            android:textColor="@color/fadedWhite"
            android:text="Change"/>
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_close_white_24dp"
        android:tint="@color/colorPrimaryLight"
        android:elevation="3sp"
        android:layout_marginTop="10sp"
        android:id="@+id/close_change_pin"
        android:background="@drawable/close_popup"/>
</RelativeLayout>