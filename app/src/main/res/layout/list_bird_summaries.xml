<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notif_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:id="@+id/bird_name_inList"
            android:textSize="16sp"
            android:text="Cockerel 1"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/transparent"
            android:textStyle="bold"
            android:id="@+id/birds_age_inList"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            android:text="24 weeks"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingTop="5sp"
        android:paddingRight="10sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/birdType_inList"
            android:textColor="@color/transparentBlue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Layers"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:id="@+id/no_active_birds_inList"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            android:text="2000 Active"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:background="@color/transparent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lightGreen"
            android:textStyle="bold"
            android:id="@+id/no_sold_birds_inList"
            android:textSize="16sp"
            android:text="200 Sold"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/fadedWhite"
            android:textStyle="bold"
            android:id="@+id/no_sick_birds_inList"
            android:textAlignment="center"
            android:textSize="15sp"
            android:text="3 Sick"/>
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/lightred"
            android:textStyle="bold"
            android:id="@+id/no_dead_birds_inList"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            android:text="24 Dead"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5sp">
    <RelativeLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_marginRight="5sp"
        android:background="@drawable/green_btn"
        android:layout_height="50sp">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_icon"
        android:layout_margin="5sp"
        android:textColor="@color/white"
        android:id="@+id/feedBird"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_marginRight="5sp"
        android:background="@drawable/accent_btn"
        android:layout_height="50sp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sell_icon"
        android:id="@+id/recordBirdSale"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        /></RelativeLayout>
    <RelativeLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_marginRight="5sp"
        android:background="@drawable/white_btn"
        android:layout_height="50sp">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sick_icon"
        android:text="Sick"
        android:layout_margin="5sp"
        android:textColor="@color/transparent"
        android:textStyle="bold"
        android:id="@+id/recordBirdSick"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:background="@drawable/red_btn"
        android:layout_height="50sp">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/death_icon"
        android:layout_margin="5sp"
        android:textColor="@color/white"
        android:id="@+id/recordBirdDeath"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>