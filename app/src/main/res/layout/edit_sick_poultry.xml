<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="20sp" android:background="@color/transparent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/fadedWhite"
            android:text="Number of Sick"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10sp"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/edit_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Sick"
                android:inputType="number"
                android:textColor="@color/grey"
                android:padding="5sp"
                android:textSize="15sp"
                android:textColorHint="@color/veryLightGrey"
                android:id="@+id/edit_number_of_sick"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:textSize="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/accent_btn"
            android:textStyle="bold"
            android:id="@+id/ok_update_number_of_sick"
            android:textColor="@color/fadedWhite"
            android:text="Enter"/>
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_close_white_24dp"
        android:tint="@color/colorPrimaryLight"
        android:elevation="3sp"
        android:layout_marginTop="10sp"
        android:id="@+id/close_edit_sick"
        android:background="@drawable/close_popup"/>
</RelativeLayout>